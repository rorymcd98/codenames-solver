@if (IsLoading)
{
    <style>
    .loader {
        border: 5px solid #f3f3f3;
        border-radius: 50%;
        border-top: 5px solid #3498db;
        width: 40px;
        height: 40px;
        -webkit-animation: spin 1s linear infinite;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
    </style>

    <div style="position: absolute; align-items: center; justify-content: center; display: flex; top: 0; bottom: 0; left: 0; right: 0; background-color: white; opacity: 30%;">
        <div class="loader"></div>
    </div>
}

@code {
    [Parameter]
    public bool IsLoading { get; set; }

}
