@if (IsLoading)
{
    <div style="position: absolute; align-items: center; justify-content: center; display: flex; top: 0; bottom: 0; left: 0; right: 0; background-color: white; opacity: 30%;">
        <div class="loader"></div>
    </div>
}

@code {
    [Parameter]
    public bool IsLoading { get; set; }
}
